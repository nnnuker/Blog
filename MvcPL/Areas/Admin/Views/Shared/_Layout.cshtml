
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "body",
        HttpMethod = "get",
        InsertionMode = InsertionMode.Replace
    };
}

<div>
    <ul class="nav nav-tabs" role="tablist">
        <li>@Ajax.ActionLink("Users", "Index", "Admin", null, options, null)</li>
        <li>@Ajax.ActionLink("Roles", "RoleIndex", "Admin", null, options, null)</li>
    </ul>
    <br />
    <div class="body-content">
        <div class="tab-content">
            <div class="tab-pane active" role="tabpanel" id="body">
                @RenderBody()
            </div>
        </div>
    </div>
</div>